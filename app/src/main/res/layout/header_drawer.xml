<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_picture_delivery"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/test" />

    <TextView
        android:id="@+id/tv_full_name_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_picture_delivery"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_picture_delivery"
        android:text="Brayan Lucas"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ToggleButton
        android:id="@+id/tb_disable_enable"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tv_full_name_delivery"
        android:layout_below="@+id/tv_full_name_delivery"
        android:textOn=""
        android:textOff=""
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_enable_disable" />

</RelativeLayout>